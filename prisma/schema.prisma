generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Education {
  id     String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  school String
  degree String
  period String
  logo   String
}

model Skill {
  id    String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title String
}

model Experience {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  company     String
  logo        String
  role        String
  period      String
  location    String
  description String[]
}
